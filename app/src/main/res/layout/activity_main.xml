<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/dia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/emblem_diamond"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_summoner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/dia"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Na1stone"/>
        <TextView
            android:id="@+id/game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dia"
            app:layout_constraintTop_toBottomOf="@id/tv_summoner_name"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:text="RANKED_SOLO_5x5"/>
        <TextView
            android:id="@+id/tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dia"
            app:layout_constraintTop_toBottomOf="@id/game"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="DIAMOND IV"/>
        <TextView
            android:id="@+id/lp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tier"
            app:layout_constraintTop_toBottomOf="@id/game"
            app:layout_constraintTop_toTopOf="@id/tier"
            app:layout_constraintBottom_toBottomOf="@id/tier"
            android:layout_marginLeft="17sp"
            android:text="0LP"/>
        <TextView
            android:id="@+id/win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dia"
            app:layout_constraintTop_toBottomOf="@id/tier"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="50%"/>
        <TextView
            android:id="@+id/win_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/win_rate"
            app:layout_constraintTop_toBottomOf="@id/tier"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/win_rate"
            app:layout_constraintBottom_toBottomOf="@id/win_rate"
            android:textSize="13sp"
            android:text="289승 292패"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        <EditText
            android:id="@+id/et_input_summoner"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_input_summoner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/input_summoner_name"
            app:layout_constraintVertical_chainStyle="packed"/>
        <Button
            android:id="@+id/btn_input_summoner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_input_summoner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/enter"/>
</androidx.constraintlayout.widget.ConstraintLayout>